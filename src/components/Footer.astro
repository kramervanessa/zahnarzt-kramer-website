---
import { t, getLocalizedPath } from "@/i18n/translations";
import type { Lang } from "@/i18n/translations";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const year = new Date().getFullYear();
---

<footer class="border-t border-pink-100 bg-white">
  <div class="mx-auto max-w-6xl px-4 py-12">
    <div class="grid gap-8 md:grid-cols-3">
      <div>
        <h3 class="mb-3 text-lg font-semibold text-gray-800">
          Dr. Vanessa <span class="text-pink-500">Kramer</span>
        </h3>
        <p class="text-sm leading-relaxed text-gray-500">
          {lang === "de"
            ? "Ihre Zahnärztin in Zürich. Einfühlsame Behandlung mit modernster Technik."
            : "Your dentist in Zurich. Compassionate treatment with cutting-edge technology."}
        </p>
      </div>

      <div>
        <h4 class="mb-3 text-sm font-semibold uppercase tracking-wider text-gray-400">
          {t(lang, "contact.address")}
        </h4>
        <address class="text-sm not-italic leading-relaxed text-gray-500">
          Zahnarztpraxis Vanessa Kramer<br />
          Musterstrasse 1<br />
          8001 Zürich<br />
          <a href="tel:+41441234567" class="text-pink-500 hover:text-pink-600">
            +41 44 123 45 67
          </a>
        </address>
      </div>

      <div>
        <h4 class="mb-3 text-sm font-semibold uppercase tracking-wider text-gray-400">
          {t(lang, "contact.hours")}
        </h4>
        <div class="space-y-1 text-sm text-gray-500">
          <p>{lang === "de" ? "Mo–Fr" : "Mon–Fri"}: 08:00 – 18:00</p>
          <p>{lang === "de" ? "Sa" : "Sat"}: 09:00 – 13:00</p>
          <p>{lang === "de" ? "So" : "Sun"}: {lang === "de" ? "Geschlossen" : "Closed"}</p>
        </div>
      </div>
    </div>

    <div class="mt-10 flex flex-col items-center justify-between gap-4 border-t border-pink-50 pt-6 md:flex-row">
      <p class="text-xs text-gray-400">
        &copy; {year} Dr. Vanessa Kramer. {t(lang, "footer.rights")}
      </p>
      <div class="flex gap-4">
        <a href={getLocalizedPath(lang, "/datenschutz")} class="text-xs text-gray-400 hover:text-pink-500">
          {t(lang, "footer.privacy")}
        </a>
        <a href={getLocalizedPath(lang, "/impressum")} class="text-xs text-gray-400 hover:text-pink-500">
          {t(lang, "footer.imprint")}
        </a>
      </div>
    </div>
  </div>
</footer>
